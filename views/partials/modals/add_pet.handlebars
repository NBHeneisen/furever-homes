<div class="modal" id="add_modal">
    <form id="cms" method="POST" action="/add_pet">
        <div class="form-group">
            <input name="id" type="hidden" placeholder={{id}} value={{id}} readonly>
            <label for="name" id="input">Pet name: </label>
            <input placeholder="Pet name" type="text" class="form-control" name="name">
            <br />
            <label for="available" id="input">Species:</label>
                        <select class="form-control" name="species">
                            <option> </option>
                            <option>Cat</option>
                            <option>Dog</option>
                            <option>Horse</option>
                            <option>Bird</option>
                        </select>
            <br />
            <label for="age" id="input">Age:</label>
                        <select class="form-control" name="age">
                            <option>  </option>
                            <option>Birth to 18 months</option>
                            <option>18 months to 6 years</option>
                            <option>6 years plus</option>
                        </select>
            <br />
            <label for="gender" id="input">Gender:</label>
                        <select class="form-control" name="gender">
                            <option>  </option>
                            <option>Female</option>
                            <option>Male</option>
                        </select>
            <br />
            <label for="temper" id="input">Temperament:</label>
                        <select class="form-control" name="temper">
                            <option>  </option>
                            <option>Social</option>
                            <option>High energy</option>
                            <option>Low energy</option>
                            <option>Anxious</option>
                        </select>
            <br />
            <label for="description" id="input">Description:</label>
            <input placeholder="Description" type="text" class="form-control" name="description">
            <br />
            <label for="image" id="input">Pet image url:</label>
            <input placeholder="http://" type="text" class="form-control" name="image">
            <br />
            <label for="available" id="input">Available for adoption?</label>
            <select class="form-control" name="available">
                <option value="True"> </option>
                <option value="True">True</option>
                <option value="False">False</option>
            </select>

            <br />
            <button type="submit" class="btn btn-primary submit modal_btn">Submit</button>
            <button type="button" class="btn btn-danger submit modal_btn cancel">Cancel</button>
        </div>
    </form>
</div>